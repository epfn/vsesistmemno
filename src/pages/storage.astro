---
import Headline from "@components/Headline.astro";
import LayoutUser from "@components/LayoutUser.astro";
import Button from "@components/Button.astro";
---

<LayoutUser title="Пользователи">
  <Headline marginTop="60" title="Все системно - хранилище документов">
    <Button color="white" icon="filter">Фильтр</Button>
    <Button icon="plus">Создать каталог</Button>
  </Headline>

  <section class="storage section">
    <div class="storage__container">
      <div class="storage__list">
        <div class="storage__item">1</div>
        <div class="storage__item">2</div>
        <div class="storage__item">3</div>
        <div class="storage__item">4</div>
        <div class="storage__item">5</div>
      </div>
    </div>
  </section>
</LayoutUser>
