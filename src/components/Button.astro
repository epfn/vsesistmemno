---
interface Props {
  href?: string;
  color?: "blue" | "orange";
  size?: "normal" | "small";
  submit?: boolean;
  marginTop?: "20";
}

const {
  href,
  color = "blue",
  submit = false,
  size = "normal",
  marginTop,
} = Astro.props;

const classList = ["button", `button--${color}`, `button--${size}`];
if (marginTop) classList.push(`button--mt${marginTop}`);
---

{
  href ? (
    <a {href} class:list={classList}>
      <slot />
    </a>
  ) : submit ? (
    <button type="submit" class:list={classList}>
      <slot />
    </button>
  ) : (
    <div class:list={classList}>
      <slot />
    </div>
  )
}
