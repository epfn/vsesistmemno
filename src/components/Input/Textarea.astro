---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"textarea"> {
  error?: boolean;
}

const { error, ...restProps } = Astro.props;
---

<div class:list={["textarea", { "textarea--error": error }]}>
  <textarea {...restProps} class="textarea__element"></textarea>
  {error && <p class="textarea__error">Текст ошибки</p>}
</div>
