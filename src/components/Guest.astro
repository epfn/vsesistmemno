---
interface Props {
  title: string;
  subtitle?: string;
  paddingBottom?: "80" | "60";
}

const { title, subtitle, paddingBottom = "80" } = Astro.props;
---

<section class:list={["guest"]}>
  <div class="guest__container">
    <img src="/img/logo.svg" alt="" class="guest__logo" />
    <div class:list={["guest__card", `guest__card--pb${paddingBottom}`]}>
      <h1 class="guest__title">{title}</h1>
      {subtitle ? <div class="guest__subtitle">{subtitle}</div> : null}
      <form class="guest__form">
        <slot name="form" />
      </form>
      <slot name="footer" />
    </div>
  </div>
</section>
