---
interface Props {
  shadow?: boolean;
}

const { shadow = false } = Astro.props;
---

<header class:list={["header", { "header--shadow": shadow }, "section"]}>
  <div class="header__container">
    <img src="/img/logo.svg" alt="" class="header__logo" />
    <div class="header__wrapper section">
      <div class="header__content">
        <slot />
      </div>
    </div>
    <div class="header__menu icon-menu"></div>
  </div>
</header>
