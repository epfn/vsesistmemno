---
interface Props {}

const {} = Astro.props;
---

<header class="header section">
  <div class="header__container">
    <img src="/img/logo.svg" alt="" class="header__logo" />
    <div class="header__wrapper section">
      <div class="header__content">
        <form class="header__form">
          <div class="header__search">
            <input
              type="text"
              class="header__search-input"
              placeholder="Поиск документов"
            />
            <button type="submit" class="header__search-icon icon-search"
            ></button>
          </div>
        </form>
        <nav class="header__navigation">
          <ul class="header__list">
            <li class="header__list-item">
              <a href="#" class="header__list-link"> Пользователи </a>
            </li>
            <li class="header__list-item">
              <a href="#" class="header__list-link"> Хранилище документов </a>
            </li>
          </ul>
        </nav>
        <div class="header__user">
          <a href="/userProfile.html" class="header__user-avatar">
            <img src="/img/izmailova.png" alt="" />
          </a>
          <a href="/userProfile.html" class="header__user-name"
            >Измайлова Ольга</a
          >
          <a href="#" class="header__user-logout">
            <span class="header__user-logout-icon icon-log-out"></span> Выход
          </a>
        </div>
      </div>
    </div>
    <div class="header__menu icon-menu"></div>
  </div>
</header>
