---
interface Props {
  variant: "catalog" | "create";
  title: string;
  form?: boolean;
}

const { variant, title, form = false } = Astro.props;

const Element = form ? "form" : "div";
---

<Element class:list={["surface", `surface--${variant}`]}>
  <div class="surface__head">
    <h1 class="surface__title">{title}</h1>
    {
      Astro.slots.has("options") && (
        <div class="surface__options">
          <slot name="options" />
        </div>
      )
    }
  </div>
  <slot />
</Element>
