---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  variant?: "normal" | "file" | 'tag' | 'path';
}

const { variant = "normal", ...restProps } = Astro.props;
---

<a {...restProps} class:list={["link", `link--${variant}`]}>
  {variant === "file" && <span class="icon-clip link__icon" />}
  <slot /></a
>
